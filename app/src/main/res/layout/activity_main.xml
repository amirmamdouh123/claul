<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/result"
        android:textSize="40dp"
        android:text=""

        />

    <Button
        android:layout_below="@+id/result"
        android:id="@+id/C"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:layout_marginLeft="10dp"
        android:text="C"
        android:textSize="30dp"
        />
    <Button

        android:layout_below="@+id/result"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="()"
        android:layout_toRightOf="@id/C"
        android:layout_marginLeft="10dp"
        android:id="@+id/prac"
        android:textSize="30dp"

        />
    <Button
        android:layout_below="@+id/result"

        android:textSize="30dp"

        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="%"
        android:layout_toRightOf="@id/prac"
        android:layout_marginLeft="10dp"
        android:id="@+id/mod"
        />
    <Button
        android:layout_below="@+id/result"

        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="/"
        android:layout_toRightOf="@id/mod"
        android:layout_marginLeft="10dp"
        android:id="@+id/div"
        android:textSize="30dp"

        />

    <Button
        android:layout_below="@id/C"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="7"
        android:id="@+id/seven"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        />
    <Button
        android:layout_below="@id/C"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="8"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/seven"
        android:textSize="30dp"
        android:id="@+id/eight"
        android:textColor="@color/black"

        />

    <Button
        android:layout_below="@id/C"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="9"
        android:layout_toRightOf="@+id/eight"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:textColor="@color/black"

        android:id="@+id/nine"
        />
    <Button
        android:layout_below="@id/C"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="*"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_toRightOf="@+id/nine"
        android:id="@+id/times"
        />
    <Button
        android:layout_below="@id/nine"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="4"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:id="@+id/four"
        android:textColor="@color/black"

        />
    <Button
        android:layout_below="@id/nine"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="5"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:id="@+id/five"
        android:layout_toRightOf="@+id/four"
        android:textColor="@color/black"

        />
    <Button
        android:layout_below="@id/nine"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="6"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:id="@+id/six"
        android:layout_toRightOf="@+id/five"
        android:textColor="@color/black"

        />
    <Button
        android:layout_below="@id/nine"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="-"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:id="@+id/neg"
        android:layout_toRightOf="@+id/six"

        />
    <Button
        android:layout_below="@id/four"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="1"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:id="@+id/one"
        android:textColor="@color/black"


        />
    <Button
        android:layout_below="@id/four"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="2"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:id="@+id/two"
        android:layout_toRightOf="@+id/four"
        android:textColor="@color/black"


        />
    <Button
        android:layout_below="@id/four"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="3"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:id="@+id/three"
        android:layout_toRightOf="@+id/two"
        android:textColor="@color/black"


        />
    <Button
        android:layout_below="@id/four"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="+"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:id="@+id/plus"
        android:layout_toRightOf="@+id/three"
        />
    <Button
        android:layout_below="@id/one"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="+/-"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:id="@+id/reverse"
        android:textColor="@color/black"


        />
    <Button
        android:layout_below="@id/one"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="0"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:id="@+id/zero"
        android:layout_toRightOf="@+id/reverse"
        android:textColor="@color/black"

        />
    <Button
        android:layout_below="@id/one"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="."
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:id="@+id/point"
        android:layout_toRightOf="@+id/zero"
        android:textColor="@color/black"

        />
    <Button
        android:layout_below="@id/one"
        android:layout_width="90dp"
        android:layout_height="89dp"
        android:text="="
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:id="@+id/equal"
        android:layout_toRightOf="@+id/point"


        />


</RelativeLayout>